{
	"compilerOptions": {
		"outDir": "./lib",
		"lib": [
			"dom",
			"es5",
			"es2015",
			"es2015.promise"
		],
		"target": "es5",
		"strict": true,
		"module": "es2015",
		"moduleResolution": "node",
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "declaration": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}
